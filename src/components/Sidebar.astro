---
const { selectedItem } = Astro.props;
---

<aside
  data-animation="default"
  data-collapse="medium"
  data-duration="400"
  data-easing="ease"
  data-easing2="ease"
  role="banner"
  class="sidebar w-nav"
>
  <div class="nav-content">
    <a href="/" class="w-nav-brand" aria-label="home">
      <div class="niv-data">
        <img
          src="/assets/kwadrat.svg"
          loading="eager"
          alt="Profile picture"
          class="niv-image"
        />
        <div>
          <div class="label-white">41.pl</div>
          <div class="label-gray">Rozwiązania IT</div>
        </div>
      </div>
    </a>

    <nav role="navigation" class="w-nav-menu">
      <a
        href="/"
        class={`nav-link-container w-inline-block ${
          selectedItem === 'start' ? 'w--current' : ''
        }`}
      >
        <img
          src="/assets/start.svg"
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>Start</div>
      </a>
      <a
        href="/administracja-serwerami"
        class={`nav-link-container w-inline-block ${
          selectedItem === 'software-development' ? 'w--current' : ''
        }`}
        aria-current={
          selectedItem === 'software-development' ? 'page' : undefined
        }
      >
        <img
          src="/assets/administracja.svg"
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>Administracja serwerami</div>
      </a>
      <a
        href="/tworzenie-stron-internetowych-i-aplikacji"
        class={`nav-link-container w-inline-block ${
          selectedItem === 'devops' ? 'w--current' : ''
        }`}
      >
        <img          
          src="/assets/strony-www.svg"
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>Tworzenie stron internetowych i aplikacji</div>
      </a>
      <a
        href="/programowanie"
        class={`nav-link-container w-inline-block ${
          selectedItem === 'programowanie' ? 'w--current' : ''
        }`}
      >
        <img
          src="/assets/programowanie.svg"
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>Programowanie</div>
      </a>


      <a
        href="/inne-uslugi"
        class={`nav-link-container w-inline-block ${
          selectedItem === 'personal-projects' ? 'w--current' : ''
        }`}
      >
        <img
          src="/assets/inne.svg"
          loading="eager"
          alt=""
          class="nav-link-image"
        />
        <div>Inne usługi</div>
      </a>
    </nav>

    <div
      class="navbar-icon-button w-nav-button"
      style="-webkit-user-select: text;"
      aria-label="menu"
      role="button"
      tabindex="0"
    >
      <img
        src="/assets/menu.svg"
        loading="eager"
        alt=""
        class="navbar-icon"
      />
    </div>
  </div>

  <script>
    import { setupNav } from '../scripts/nav.js';
    
    let cleanup;
    document.addEventListener('astro:page-load', () => {
      if (cleanup) cleanup();
      cleanup = setupNav();
    });

    document.addEventListener('astro:before-swap', () => {
      if (cleanup) cleanup();
    });
  </script>
</aside>